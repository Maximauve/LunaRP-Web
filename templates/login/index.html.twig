{% extends 'auth.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('auth') }}
{% endblock %}

{% block body %}

<h1>Connexion</h1>
<p>Pas de compte ? <a class="underline" href="{{path('app_register')}}">Inscrivez-vous ici !</a></p>

<form method="post" action="{{path('app_auth')}}">
	<lablel for="email">Email</lablel>
	<input class="auth-input" type="email" id="email" name="email" value="{{last_email}}">
	<lablel for="password">Mot de passe</lablel>
	<input class="auth-input" type="password" id="password" name="password">
	<button class="submit-button" type="submit">Connexion</button>
</form>

{% endblock %}
